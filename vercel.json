{
    "version": 2,
    "builds": [
        {
            "src": "build_vercel.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "functions": {
        "build_vercel.sh": {
            "maxDuration": 300
        }
    }
}